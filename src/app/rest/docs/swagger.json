{
  "openapi": "3.0.3",
  "info": {
    "description": "Rest API of Zuju Digital",
    "title": "Zuju Digital Fixtures API.",
    "contact": {
      "name": "ilham",
      "email": "r.ilhamfadhilah@gmail.com"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/fixtures": {
      "get": {
        "description": "Fetch all fixtures listing data",
        "tags": ["Fixtures"],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "query",
            "name": "size",
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "query",
            "name": "search",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "sort",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/Fixtures"
          }
        }
      },
      "post": {
        "description": "Create fixtures listing data",
        "tags": ["Fixtures"],
        "responses": {
          "200": {
            "$ref": "#/components/responses/Fixtures"
          }
        },
        "requestBody": {
          "$ref": "#/components/requestBodies/FixturesCreate"
        }
      }
    },
    "/fixtures/calendar": {
      "get": {
        "description": "Fetch all fixtures by date",
        "tags": ["Fixtures"],
        "parameters": [
          {
            "in": "query",
            "name": "startDate",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/FixturesByDate"
          }
        }
      }
    },
    "/fixtures/{id_fixtures}": {
      "delete": {
        "description": "Update fixtures listing data",
        "tags": ["Fixtures"],
        "parameters": [
          {
            "in": "path",
            "name": "id_fixtures",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {}
        }
      },
      "put": {
        "description": "Create fixtures listing data",
        "tags": ["Fixtures"],
        "parameters": [
          {
            "in": "path",
            "name": "id_fixtures",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/Fixtures"
          }
        },
        "requestBody": {
          "$ref": "#/components/requestBodies/FixturesCreate"
        }
      }
    }
  },
  "components": {
    "responses": {
      "Message": {
        "description": "Content",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Message"
            }
          }
        }
      },
      "Fixtures": {
        "description": "Content",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/PaginatedFixtures"
            }
          }
        }
      },
      "FixturesByDate": {
        "description": "Content",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/FixturesByDate"
            }
          }
        }
      }
    },
    "requestBodies": {
      "FixturesCreate": {
        "description": "Fixtures request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/FixturesRequestBody"
            }
          }
        }
      }
    },
    "schemas": {
      "Message": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "PaginatedFixtures": {
        "type": "object",
        "properties": {
          "pagination": {
            "type": "object",
            "properties": {
              "page": {
                "type": "integer"
              },
              "size": {
                "type": "integer"
              },
              "total_size": {
                "type": "integer"
              },
              "total_page": {
                "type": "integer"
              }
            }
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Fixtures"
            }
          }
        }
      },
      "Generic": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "updated": {
            "type": "string"
          },
          "created": {
            "type": "string"
          }
        }
      },
      "Score": {
        "type": "object",
        "properties": {
          "home": {
            "type": "integer"
          },
          "away": {
            "type": "integer"
          }
        }
      },
      "Teams": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        }
      },
      "Fixtures": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "tournament_name": {
            "type": "string"
          },
          "match_status": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
          "score": {
            "$ref": "#/components/schemas/Score"
          },
          "homeTeam": {
            "$ref": "#/components/schemas/Teams"
          },
          "awayTeam": {
            "$ref": "#/components/schemas/Teams"
          }
        }
      },
      "FixturesByDate": {
        "type": "array",
        "items": {
          "properties": {
            "date": {
              "type": "string"
            },
            "match_count": {
              "type": "number"
            }
          }
        }
      },
      "FixturesRequestBody": {
        "type": "object",
        "properties": {
          "tournament_name": {
            "type": "string"
          },
          "match_status": {
            "type": "string"
          },
          "date": {
            "type": "string"
          }
        }
      }
    }
  }
}
